<h1>IdeaBox</h1>
<form action="/" method="POST">
  <p>
    Your Idea:
  </p>
  <input type="text" name="idea[title]" placeholder="title"/><br/>
  <textarea name="idea[description]" placeholder="description"></textarea><br/>
  <input type="text" name="idea[tag]" placeholder="tag"><br/>
  <input type="submit"/>
</form>
<h3>Existing Ideas</h3>
<ul>
  <% ideas.each do |idea| %>
    <li>
      <b>Title:</b> <%= idea.title %><br>
      <b>Description:</b> <%= idea.description %><br>
      <b>Tag:</b> <a href="/tags/<%= idea.tag %>"><%= idea.tag.upcase %></a><br>
      <b><i>Created At</i></b><br>
      <form action='<%= idea.id %>/like' method='POST' disply: inline>
        <input type="submit" value="+">
        <a href="/<%= idea.id %>/edit">Edit</a>
      </form>
      <form action="/<%= idea.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="delete">
      </form>
    </li>
  <% end %>
</ul>
