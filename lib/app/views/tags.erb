<h1><%= tag.upcase %> </h1>
<ol>
  <% ideas.each do |idea| %>
  <li>
    <b>Title:</b> <%= idea.title %><br>
    <b>Description:</b> <%= idea.description %><br>
    <b>Tag:</b> <a href="/tags/<%= idea.tag %>"><%= idea.tag.upcase %></a>
    <form action="/<%= idea.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="delete">
    </form>
  </li>
  <% end %>
</ol>
